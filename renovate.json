{
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "masterIssue": true,
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "extends": "monorepo:angular",
      "groupName": "angular monorepo"
    },
    {
      "extends": "monorepo:angularcli",
      "groupName": "angularcli monorepo"
    },
    {
      "packagePatterns": ["ngx-vcard"],
      "enabled": false
    }
  ]
}
